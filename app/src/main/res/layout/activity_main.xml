<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|center"
    android:background="@drawable/background"
    android:weightSum="1"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:columnCount="4"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALLSIGN "
            android:id="@+id/tv_callsign"
            android:textSize="16dp"
            android:layout_weight="0.10"
            android:padding="2dp"
            android:textColor="@color/colorPrimaryDark"
            />

        <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_callsign"
            android:singleLine="true"
            android:background="#ffffff"
            android:maxLength="6"
            android:textSize="16dp"
            android:hint="ex) rae"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyz0123456789"
            android:padding="2dp" />

        <Spinner
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/sp_color"
            android:spinnerMode="dropdown"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>

        <Button android:id="@+id/btn_registration"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="APPLY"
            android:background="@drawable/button_rounded"
            android:layout_gravity="center" />

        <android.support.v4.widget.Space
            android:layout_height="3dp"
            />

        <android.support.v4.widget.Space
            android:layout_height="3dp"
            />

        <android.support.v4.widget.Space
            android:layout_height="3dp"
            />

        <android.support.v4.widget.Space
            android:layout_height="3dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEAM "
            android:id="@+id/tv_teamid"
            android:textSize="16dp"
            android:padding="2dp"
            android:textColor="@color/colorPrimaryDark"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_teamid"
            android:singleLine="true"
            android:background="#ffffff"
            android:layout_weight="1"
            android:maxLength="10"
            android:textSize="16dp"
            android:padding="2dp"
            android:hint="ex) myteam"
            android:digits="abcdefghijklmnopqrstuvwxyz0123456789"
            android:layout_columnSpan="2"/>

        <Button android:id="@+id/btn_teamjoin"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="JOIN"
            android:background="@drawable/button_rounded"
            android:layout_gravity="center" />
<!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS"
            android:id="@+id/tv_status"
            android:textSize="16dp"
            android:layout_weight="0.10"
            android:padding="3dp"
            android:layout_columnSpan="2"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INTERVAL"
            android:id="@+id/tv_interval"
            android:textSize="16dp"
            android:layout_weight="0.10"
            android:padding="3dp"
            android:layout_columnSpan="2"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/sp_status"
            android:spinnerMode="dropdown"
            android:layout_columnSpan="2"
            android:layout_gravity="center" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/sp_interval"
            android:spinnerMode="dropdown"
            android:layout_columnSpan="2"
            android:layout_gravity="center" />
            -->
    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:columnCount="3"
        android:padding="5dp">

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="▶START"
            android:textColor="#FFFFFF"
            android:id="@+id/btn_startservice"
            android:background="@drawable/button_rounded"
            android:layout_gravity="center" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="■STOP"
            android:textColor="#FFFFFF"
            android:id="@+id/btn_stopservice"
            android:background="@drawable/button_rounded"
            android:layout_gravity="center" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="↕LIST"
            android:textColor="#FFFFFF"
            android:id="@+id/btn_teamlist"
            android:background="@drawable/button_rounded" />
    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:columnCount="3"
        android:padding="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="         "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:paddingTop="20dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TEAM LIST"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:id="@+id/tv_myteamlist"
            android:paddingTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tracking"
            android:textColor="#FF0000"
            android:textSize="10dp"
            android:id="@+id/tv_status"
            android:layout_gravity="right"
            android:paddingTop="20dp" />
    </GridLayout>

    <ListView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/lv_teamlist"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.30" />
</LinearLayout>